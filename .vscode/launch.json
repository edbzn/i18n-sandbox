{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug node-app with Nx",
      "runtimeExecutable": "pnpm exec",
      "runtimeArgs": [
        "nx",
        "serve",
        "node-app"
      ],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/apps/node-app/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    }
  ]
}
