{
  "name": "i18n-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/i18n-tools/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/i18n-tools",
        "main": "libs/i18n-tools/src/index.ts",
        "tsConfig": "libs/i18n-tools/tsconfig.lib.json",
        "assets": [
          "libs/i18n-tools/*.md",
          {
            "input": "./libs/i18n-tools/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/i18n-tools/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/i18n-tools",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/i18n-tools",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
