{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "outputPath": {
      "type": "string",
      "description": "The output path for the localized builds"
    },
    "browserTarget": {
      "type": "string",
      "description": "The browser target to build (e.g., 'react-app:build')"
    },
    "locales": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of locales to compile (e.g., ['en', 'fr'])",
      "default": ["en", "fr"]
    }
  },
  "required": ["outputPath", "browserTarget"]
}
